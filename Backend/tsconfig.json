{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist", // Specify your output directory
    "baseUrl": ".", // Set the base URL to root for resolving modules
    "paths": {
      "@/*": ["src/*"] // Use path alias to point to the src folder
    },
    "esModuleInterop": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ]
}
